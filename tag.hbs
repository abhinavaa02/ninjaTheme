{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The big featured header, it uses blog cover image as a BG if available --}}
{{#tag}}
<header class="site-header outer mt-5 {{#if cover_image}}{{else}}no-cover{{/if}}" {{#if cover_image}} style="background-image: url({{cover_image}}){{else}}no-cover{{/if}}">
    <div class="inner">
        <div class="site-header-content">
            <h1 class="site-title text-capitalize">{{name}}</h1>
            <p class="site-description">
                {{#if description}}
                    {{description}}
                {{else}}
                   <span class="bull">&bull;</span> A collection of {{plural ../pagination.total empty='posts' singular='% post' plural='% posts'}}
                {{/if}}
            </p>
        </div>
    </div>
</header>
{{/tag}}

{{!-- The main content area --}}
<main id="site-main" class="site-main outer mt-5">
    <div class="inner">
        <div class="post-feed row">
            {{#foreach posts}}
                {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
            <div class="col-lg-4 col-md-6 offset-md-0 col-12 mt-2 mb-3">{{> "insights-post-card"}}</div>
            {{/foreach}}
            {{pagination}}
        </div>
    </div>
</main>
