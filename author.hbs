{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{#author}}
{{!-- Everything inside the #author tags pulls data from the author --}}
<header class="site-header outer mt-5 {{#if cover_image}}{{else}}no-cover{{/if}}" {{#if cover_image}} style="background-image: url({{cover_image}}){{else}}no-cover{{/if}}">
    <div class="inner">
        <div class="site-header-content">
            <div class="d-flex">
            {{#if profile_image}}
                <img class="author-profile-image rounded-circle my-auto me-2 me-md-3" src="{{profile_image}}" alt="{{name}}" />
            {{/if}}
            <h1 class="site-title my-auto">{{name}}</h1>
            {{#if bio}}
            <span class="author-stats mx-2 my-auto">
                <span class="bull">&bull;</span> {{plural ../pagination.total empty='No posts' singular='% post'plural='% posts'}}
            </span>
            </div>
                <p class="author-bio m-0 text-justify mt-2">{{bio}}</p>
            {{/if}}
            <div class="author-meta row">
                {{#if location}}
                <div class="col-12 d-flex my-2">
                    <i class="bi bi-geo-alt-fill"></i> <div class="author-location">{{location}}</div>
                </div>
                {{/if}}
                <div class="col-12">
                {{#if website}}
                    <a class="text-dark text-decoration-none fs-2 me-3" href="{{website}}" target="_blank" rel="noopener">
                        <i class="bi bi-globe"></i>
                    </a>
                {{/if}}
                {{#if twitter}}
                    <a class="text-dark text-decoration-none fs-2 me-3" href="{{twitter_url}}" target="_blank" rel="noopener">
                        <i class="bi bi-twitter"></i>
                    </a>
                {{/if}}
                {{#if facebook}}
                    <a class="text-dark text-decoration-none fs-2 me-3" href="{{facebook_url}}" target="_blank" rel="noopener">
                        <i class="bi bi-facebook"></i>
                    </a>
                {{/if}}
                </div>
                {{!-- <a class="social-link social-link-rss" href="https://feedly.com/i/subscription/feed/{{url absolute="true"}}rss/" target="_blank" rel="noopener">{{> "icons/rss"}}</a> --}}
            </div>
        </div>
    </div>
</header>
{{/author}}

{{!-- The main content area --}}
<main id="site-main" class="site-main outer mt-5">
    <div class="inner">

        <div class="post-feed row">
            {{#foreach posts}}

                {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
            <div class="col-lg-4 col-md-6 offset-md-0 col-12 mt-2 mb-3">{{> "insights-post-card"}}</div>

            {{/foreach}}
            {{pagination}}
        </div>

    </div>
</main>
